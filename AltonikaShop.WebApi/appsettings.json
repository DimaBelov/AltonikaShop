{
  "DataConnections": [
    {
      "Name": "Default",
      "ConnectionString": "Data Source=(local);Initial Catalog=AltonikaShop;Integrated Security=SSPI;Application Name=AltonikaShop",
      "ConnectionType": "ReadAndWrite",
      "ProviderName": "System.Data.SqlClient"
    }
  ],
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.RollingFile"
    ],
    "MinimumLevel": "Debug",
    "Enrich": [
      "FromLogContext",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "Logs\\log-{Date}.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedOrigins": [
    "http://localhost:4202"
  ]
}
